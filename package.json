{
  "name": "tidaltheory",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt",
    "export": "nuxt build --target static && nuxt-ts export",
    "generate": "nuxt generate",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:scripts": "eslint '**/*.{js,vue}' --fix --ignore-pattern '.nuxt/**' --ignore-pattern 'dist/**' --ignore-pattern 'static/**'",
    "lint:styles": "stylelint '**/*.{css,vue}' --ip '{.nuxt,dist}/**'",
    "start": "nuxt start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,vue}": [
      "stylelint --fix"
    ],
    "*.{js,vue}": [
      "eslint --fix"
    ],
    "package.json": [
      "prettier --write"
    ]
  },
  "prettier": {
    "htmlWhitespaceSensitivity": "strict",
    "proseWrap": "never",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@nuxt/content": "1.14.0",
    "@nuxtjs/google-analytics": "2.4.0",
    "@nuxtjs/markdownit": "2.0.0",
    "@nuxtjs/pwa": "3.3.5",
    "@nuxtjs/tailwindcss": "4.2.1",
    "core-js": "3.9.0",
    "nuxt": "2.15.8"
  },
  "devDependencies": {
    "@nuxt/postcss8": "1.1.3",
    "@nuxt/typescript-build": "2.1.0",
    "@types/node": "14.17.19",
    "@types/webpack-env": "1.16.2",
    "@typescript-eslint/eslint-plugin": "4.15.2",
    "@typescript-eslint/parser": "4.15.2",
    "@zazen/eslint-config": "2.3.0",
    "@zazen/stylelint-config": "2.0.0",
    "eslint": "7.32.0",
    "eslint-config-standard-with-typescript": "21.0.1",
    "eslint-plugin-vue": "7.18.0",
    "husky": "4.3.8",
    "import-sort-style-python": "1.0.2",
    "lint-staged": "10.5.4",
    "mini-css-extract-plugin": "1.6.2",
    "postcss": "8.3.8",
    "prettier": "2.2.1",
    "prettier-plugin-import-sort": "0.0.7",
    "prettier-plugin-packagejson": "2.2.13",
    "stylelint": "13.11.0",
    "tailwindcss-capsize": "2.1.0",
    "tailwindcss-opentype": "0.4.0"
  },
  "importSort": {
    ".js,.ts,.vue": {
      "parser": "babylon",
      "style": "python",
      "options": {
        "knownFramework": [
          "@nuxt"
        ],
        "knownFirstparty": [
          "~"
        ]
      }
    }
  }
}
