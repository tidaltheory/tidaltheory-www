{
  "name": "tidaltheory",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "TAILWIND_MODE=watch vite dev",
    "image": "lens add --store content/imagemeta.json",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:scripts": "eslint '**/*.{js,ts,vue}' --fix --ignore-pattern '.nuxt/**' --ignore-pattern 'dist/**' --ignore-pattern 'static/**'",
    "lint:styles": "stylelint '**/*.{css,vue}' --ip '{.nuxt,dist}/**'",
    "package": "vite package",
    "prepare": "husky install",
    "preview": "vite preview"
  },
  "lint-staged": {
    "*.css": "stylelint --fix",
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.svelte": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": "prettier --write"
  },
  "prettier": {
    "plugins": [
      "./node_modules/prettier-plugin-packagejson",
      "./node_modules/prettier-plugin-svelte",
      "./node_modules/prettier-plugin-tailwindcss"
    ],
    "semi": false,
    "singleQuote": true,
    "svelteIndentScriptAndStyle": false,
    "svelteSortOrder": "options-scripts-markup-styles",
    "overrides": [
      {
        "files": "*.svelte",
        "options": {
          "parser": "svelte"
        }
      }
    ]
  },
  "dependencies": {
    "@floating-ui/dom": "1.0.12",
    "date-fns": "2.29.3",
    "svelte-floating-ui": "1.1.6"
  },
  "devDependencies": {
    "@iarna/toml": "toml-1.0.0-rc.1",
    "@sveltejs/adapter-static": "1.0.0",
    "@sveltejs/kit": "1.0.1",
    "@tailwindcss/typography": "0.5.8",
    "@tidaltheory/lens": "1.1.2",
    "@zazen/eslint-config": "6.1.0",
    "@zazen/stylelint-config": "3.0.0",
    "autoprefixer": "10.4.13",
    "eslint": "8.28.0",
    "eslint-plugin-svelte": "2.15.0",
    "globby": "13.1.3",
    "gray-matter": "4.0.3",
    "husky": "8.0.2",
    "lint-staged": "13.1.0",
    "mdsvex": "0.10.6",
    "postcss": "8.4.20",
    "postcss-html": "1.5.0",
    "postcss-load-config": "4.0.1",
    "postcss-preset-env": "7.8.3",
    "prettier": "2.8.1",
    "prettier-plugin-packagejson": "2.3.0",
    "prettier-plugin-svelte": "2.9.0",
    "prettier-plugin-tailwindcss": "0.2.1",
    "rehype-raw": "6.1.1",
    "rehype-sanitize": "5.0.1",
    "rehype-stringify": "9.0.3",
    "remark-frontmatter": "4.0.1",
    "remark-parse": "10.0.1",
    "remark-rehype": "10.1.0",
    "stylelint": "14.16.0",
    "svelte": "3.55.0",
    "svelte-check": "2.10.3",
    "svelte-intersection-observer": "0.10.0",
    "svelte-preprocess": "5.0.0",
    "tailwindcss": "3.2.4",
    "tailwindcss-capsize": "3.0.3",
    "tailwindcss-opentype": "1.1.0",
    "tslib": "2.4.1",
    "typescript": "4.8.4",
    "unified": "10.1.2",
    "vite": "4.0.2"
  }
}
