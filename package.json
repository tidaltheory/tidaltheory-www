{
  "name": "tidaltheory",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "dev": "TAILWIND_MODE=watch nuxt",
    "export": "nuxt build --target static && nuxt export",
    "generate": "nuxt generate",
    "image": "lens add --store content/imagemeta.json",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:scripts": "eslint '**/*.{js,ts,vue}' --fix --ignore-pattern '.nuxt/**' --ignore-pattern 'dist/**' --ignore-pattern 'static/**'",
    "lint:styles": "stylelint '**/*.{css,vue}' --ip '{.nuxt,dist}/**'",
    "start": "nuxt start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css}": "stylelint --fix",
    "*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": "prettier --write"
  },
  "prettier": {
    "proseWrap": "never",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "overrides": [
      {
        "files": [
          "*.json",
          "*.yml"
        ],
        "options": {
          "tabWidth": 2,
          "useTabs": false
        }
      }
    ]
  },
  "dependencies": {
    "@nuxt/content": "1.15.1",
    "@nuxtjs/google-analytics": "2.4.0",
    "@nuxtjs/markdownit": "2.0.0",
    "@nuxtjs/pwa": "3.3.5",
    "body-scroll-lock": "3.1.5",
    "nuxt": "2.15.8"
  },
  "devDependencies": {
    "@nuxt/postcss8": "1.1.3",
    "@nuxt/typescript-build": "2.1.0",
    "@tailwindcss/typography": "0.5.2",
    "@types/node": "16.11.35",
    "@types/webpack-env": "1.16.4",
    "@typescript-eslint/eslint-plugin": "5.12.0",
    "@typescript-eslint/parser": "5.12.0",
    "@zazen/stylelint-config": "3.0.0",
    "autoprefixer": "10.4.2",
    "eslint": "8.15.0",
    "eslint-config-prettier": "8.4.0",
    "eslint-plugin-vue": "8.4.1",
    "husky": "4.3.8",
    "import-sort-style-python": "1.0.2",
    "lint-staged": "10.5.4",
    "mini-css-extract-plugin": "1.6.2",
    "postcss": "8.4.5",
    "postcss-preset-env": "7.4.2",
    "prettier": "2.5.1",
    "prettier-plugin-import-sort": "0.0.7",
    "prettier-plugin-packagejson": "2.2.15",
    "stylelint": "14.8.2",
    "tailwindcss": "3.0.12",
    "tailwindcss-capsize": "3.0.2",
    "tailwindcss-opentype": "1.0.0"
  },
  "importSort": {
    ".js,.ts,.vue": {
      "parser": "babylon",
      "style": "python",
      "options": {
        "knownFramework": [
          "@nuxt",
          "vue"
        ],
        "knownFirstparty": [
          "~"
        ]
      }
    }
  }
}
