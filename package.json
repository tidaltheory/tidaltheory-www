{
  "name": "tidaltheory",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "TAILWIND_MODE=watch vite dev",
    "image": "lens add --store content/imagemeta.json",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:scripts": "eslint '**/*.{js,ts,vue}' --fix --ignore-pattern '.nuxt/**' --ignore-pattern 'dist/**' --ignore-pattern 'static/**'",
    "lint:styles": "stylelint '**/*.{css,vue}' --ip '{.nuxt,dist}/**'",
    "package": "vite package",
    "prepare": "husky install",
    "preview": "vite preview"
  },
  "lint-staged": {
    "*.css": "stylelint --fix",
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.svelte": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": "prettier --write"
  },
  "prettier": {
    "plugins": [
      "./node_modules/prettier-plugin-packagejson",
      "./node_modules/prettier-plugin-svelte",
      "./node_modules/prettier-plugin-tailwindcss"
    ],
    "semi": false,
    "singleQuote": true,
    "svelteIndentScriptAndStyle": false,
    "svelteSortOrder": "options-scripts-markup-styles",
    "overrides": [
      {
        "files": "*.svelte",
        "options": {
          "parser": "svelte"
        }
      }
    ]
  },
  "devDependencies": {
    "@sveltejs/adapter-netlify": "next",
    "@sveltejs/adapter-static": "1.0.0-next.48",
    "@sveltejs/kit": "1.0.0-next.561",
    "@tailwindcss/typography": "0.5.8",
    "@tidaltheory/lens": "1.1.1",
    "@zazen/eslint-config": "6.1.0",
    "@zazen/stylelint-config": "3.0.0",
    "autoprefixer": "10.4.13",
    "eslint": "8.26.0",
    "eslint-plugin-svelte": "2.10.0",
    "gray-matter": "4.0.3",
    "husky": "8.0.1",
    "lint-staged": "13.0.3",
    "mdsvex": "0.10.6",
    "postcss": "8.4.18",
    "postcss-html": "1.5.0",
    "postcss-load-config": "4.0.1",
    "postcss-preset-env": "7.8.2",
    "prettier": "2.7.1",
    "prettier-plugin-packagejson": "2.3.0",
    "prettier-plugin-svelte": "2.8.0",
    "prettier-plugin-tailwindcss": "0.1.13",
    "rehype-raw": "6.1.1",
    "rehype-sanitize": "5.0.1",
    "rehype-stringify": "9.0.3",
    "remark-frontmatter": "4.0.1",
    "remark-parse": "10.0.1",
    "remark-rehype": "10.1.0",
    "stylelint": "14.14.0",
    "svelte": "3.52.0",
    "svelte-check": "2.9.2",
    "svelte-intersection-observer": "0.10.0",
    "svelte-preprocess": "4.10.7",
    "tailwindcss": "3.2.4",
    "tailwindcss-capsize": "3.0.2",
    "tailwindcss-opentype": "1.1.0",
    "tslib": "2.4.0",
    "typescript": "4.8.4",
    "unified": "10.1.2",
    "vite": "3.1.8"
  }
}
