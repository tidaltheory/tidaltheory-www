{
    "name": "tidaltheory",
    "private": true,
    "scripts": {
        "build": "nuxt-ts build",
        "dev": "nuxt-ts",
        "generate": "nuxt-ts generate",
        "lint": "npm run lint:scripts && npm run lint:styles",
        "lint:scripts": "eslint '**/*.{js,vue}' --fix --ignore-pattern '.nuxt/**' --ignore-pattern 'dist/**' --ignore-pattern 'static/**'",
        "lint:styles": "stylelint '**/*.{css,vue}' --ip '{.nuxt,dist}/**'",
        "start": "nuxt-ts start"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{css,vue}": [
            "stylelint --fix",
            "git add"
        ],
        "*.{js,vue}": [
            "eslint --fix",
            "git add"
        ],
        "package.json": [
            "prettier --write",
            "git add"
        ]
    },
    "prettier": {
        "arrowParens": "always",
        "htmlWhitespaceSensitivity": "strict",
        "proseWrap": "never",
        "semi": false,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "all"
    },
    "dependencies": {
        "@nuxt/typescript-runtime": "0.4.10",
        "@nuxtjs/google-analytics": "2.3.0",
        "@nuxtjs/markdownit": "1.2.9",
        "@nuxtjs/pwa": "3.0.0-beta.20",
        "core-js": "3.6.5",
        "netlify-cms": "2.10.51",
        "nuxt": "2.13.2"
    },
    "devDependencies": {
        "@nuxt/typescript-build": "1.0.x",
        "@types/node": "14.0.x",
        "@typescript-eslint/eslint-plugin": "3.5.x",
        "@typescript-eslint/parser": "3.5.x",
        "@zazen/eslint-config": "2.0.x",
        "@zazen/stylelint-config": "1.0.x",
        "eslint": "7.3.x",
        "eslint-plugin-vue": "6.2.x",
        "husky": "4.2.x",
        "import-sort-style-python": "1.0.x",
        "lint-staged": "10.2.x",
        "postcss-advanced-variables": "3.0.x",
        "prettier": "2.0.x",
        "prettier-plugin-import-sort": "0.0.4",
        "prettier-plugin-packagejson": "2.2.x",
        "stylelint": "13.6.x"
    },
    "importSort": {
        ".js,.ts,.vue": {
            "parser": "babylon",
            "style": "python",
            "options": {
                "knownFramework": [
                    "@nuxt"
                ],
                "knownFirstparty": [
                    "~"
                ]
            }
        }
    }
}
