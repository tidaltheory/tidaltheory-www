{
  "name": "tidaltheory",
  "private": true,
  "scripts": {
    "build": "vite build",
    "dev": "TAILWIND_MODE=watch vite dev",
    "package": "vite package",
    "preview": "vite preview",
    "image": "lens add --store content/imagemeta.json",
    "lint": "npm run lint:scripts && npm run lint:styles",
    "lint:scripts": "eslint '**/*.{js,ts,vue}' --fix --ignore-pattern '.nuxt/**' --ignore-pattern 'dist/**' --ignore-pattern 'static/**'",
    "lint:styles": "stylelint '**/*.{css,vue}' --ip '{.nuxt,dist}/**'",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.css": "stylelint --fix",
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.svelte": [
      "eslint --fix",
      "stylelint --fix",
      "prettier --write"
    ],
    "package.json": "prettier --write"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "svelteIndentScriptAndStyle": false,
    "svelteSortOrder": "options-scripts-markup-styles"
  },
  "type": "module",
  "dependencies": {},
  "devDependencies": {
    "@sveltejs/adapter-netlify": "next",
    "@sveltejs/kit": "next",
    "@tailwindcss/typography": "0.5.4",
    "@tidaltheory/lens": "0.5.2",
    "@typescript-eslint/eslint-plugin": "5.32.0",
    "@typescript-eslint/parser": "5.32.0",
    "@zazen/stylelint-config": "3.0.0",
    "autoprefixer": "10.4.8",
    "eslint": "8.21.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-svelte3": "4.0.0",
    "husky": "8.0.1",
    "lint-staged": "12.4.1",
    "mdsvex": "0.10.6",
    "postcss": "8.4.16",
    "postcss-preset-env": "7.7.2",
    "prettier": "2.7.1",
    "prettier-plugin-packagejson": "2.2.18",
    "prettier-plugin-svelte": "2.7.0",
    "prettier-plugin-tailwindcss": "0.1.13",
    "stylelint": "14.9.1",
    "svelte": "3.49.0",
    "svelte-check": "2.8.0",
    "svelte-preprocess": "4.10.7",
    "tailwindcss": "3.1.8",
    "tailwindcss-capsize": "3.0.2",
    "tailwindcss-opentype": "1.0.0",
    "tslib": "2.4.0",
    "typescript": "4.7.4",
    "vite": "3.0.4"
  }
}
